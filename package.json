{
  "name": "greaper-website",
  "version": "0.3.0",
  "private": true,
  "dependencies": {
    "@types/jest": "27.4.1",
    "@types/node": "16.11.29",
    "@types/react": "17.0.2",
    "@types/react-router-dom": "5.3.3",
    "dompurify": "2.3.6",
    "node-sass": "7.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-markdown": "7.1.1",
    "react-router-dom": "6.2.1",
    "react-scripts": "5.0.0",
    "typescript": "4.6.3",
    "usehooks-ts": "^2.5.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src --color --cache --max-warnings=0 && prettier --check --config ./.prettierrc \"./src/**/*.ts\" \"./src/**/*.tsx\"",
    "format": "prettier --write --config ./.prettierrc ./src/**/*.{js,jsx,ts,tsx,scss,css,json} --write",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "pre-commit": [
    "lint"
  ],
  "devDependencies": {
    "@babel/eslint-parser": "7.17.0",
    "@types/react-dom": "17.0.2",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "eslint": "8.14.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.1.5",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.4.0",
    "eslint-webpack-plugin": "3.1.1",
    "prettier": "2.6.2",
    "prettier-eslint": "14.0.1",
    "prettier-eslint-cli": "5.0.1"
  }
}
